{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "bun"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@plannotator/ui/*": ["../../packages/ui/*"],
      "@plannotator/review-editor": ["../../packages/review-editor/App.tsx"],
      "@plannotator/review-editor/*": ["../../packages/review-editor/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "./**/*",
    "../../packages/ui/global.d.ts",
    "../../packages/review-editor/**/*",
    "../../packages/server/**/*",
    "../../packages/ui/**/*"
  ]
}
