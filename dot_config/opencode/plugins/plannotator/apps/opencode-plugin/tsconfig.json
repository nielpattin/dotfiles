{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun", "node"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "paths": {
      "@plannotator/server": ["../../packages/server/index.ts"],
      "@plannotator/server/*": ["../../packages/server/*"]
    }
  },
  "include": ["index.ts"]
}
